@using AdminMnsV1.Models.Experts
@using AdminMnsV1.Models.Students
@model ExpertCreateViewModel


@{
    ViewData["Title"] = "FormulaireExpert";
}

<h1 class="m-5">Ajout d'un nouvel Intervenant</h1>
<a href="@Url.Action("Expert", "Experts")" class="mx-5">⬅ Retour à la page intervenant</a>

<div class="container containerStudentDetails">
    <form asp-action="Create" asp-controller="Experts" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Nom</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">Prénom</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="mb-3">
                    <label asp-for="BirthDate" class="form-label">Date de naissance</label>
                    <input asp-for="BirthDate" type="date" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="mb-3">
                    <label asp-for="BirthPlace" class="form-label">Lieu de naissance</label>
                    <input asp-for="BirthPlace" class="form-control" />
                    <span asp-validation-for="BirthPlace" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="mb-3">
                    <label asp-for="Sexe" class="form-label">Sexe</label>
                    <select asp-for="Sexe" class="form-select">
                        <option value="">Sélectionner</option>
                        <option value="Male">Masculin</option>
                        <option value="Female">Féminin</option>
                    </select>
                    <span asp-validation-for="Sexe" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Speciality" class="form-label">Spécialité</label>
                    <select asp-for="Speciality" class="form-select">
                        <option value="">Choisir une spécialité</option>
                        <option value="Base de données">Base de données</option>
                        <option value="C#">C#</option>
                        <option value="Java">Java</option>
                        <option value="etc">etc</option>
                    </select>
                    <span asp-validation-for="Speciality" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mot de passe</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Téléphone</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Adresse</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="mb-3">
                    <label asp-for="City" class="form-label">Ville</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="btnLoadStagiaire text-center mt-4">
            <button type="submit" class="btn btn-outline-warning">Valider</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
