@{
    // Vous pouvez mettre ici du code C# si nécessaire, par exemple pour définir le titre de la page.
    ViewData["Title"] = "Gestion des Absences et Retards";
}

    <div class="container">
        @* Utiliser container-fluid pour une largeur de 100% *@
        <div class="graphLateAbs">
            <div class="title">
                <h1 class="mt-5 mb-3 mx-4">Retards-Absences</h1>
            </div>
            <div class="row">
            <div class="col-md-6 mb-4 w-75 mx-auto">
                    <div class="chartContainerAbs mx-auto border rounded-4 bg-light p-3">
                        <canvas  id="absencesChart" aria-label="chart" role="img"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="container tab-content contentRetard" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <h4 class="mt-5 mb-4">Suivi des Absences</h4>
                <div class="JustificatifsAbs">
                    <div class="table-responsive">
                        <table class="table align-middle table-striped table-hover table-custom bg-secondary">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Durée</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>12/03/2025</td>
                                    <td>2 jours</td>
                                    <td>Maladie</td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>22/07/2025</td>
                                    <td>2 jours</td>
                                    <td>Congé</td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>12/03/2025</td>
                                    <td>4 jours</td>
                                    <td>Urgence</td>
                                    <td>
                                        <button type="button" class="btn btn-warning btn-sm">En cours</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">4</th>
                                    <td>12/03/2025</td>
                                    <td>5 jours</td>
                                    <td>Maladie</td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">5</th>
                                    <td>12/03/2025</td>
                                    <td>2 jours</td>
                                    <td>Vacances</td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="btnNewLateAbs">
                    <button class="btnNewAbs btn btn-outline-warning" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasRightAbsence" aria-controls="offcanvasRight">
                        Ajout d'une absence
                    </button>

                    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRightAbsence"
                         aria-labelledby="offcanvasRightLabelAbsence">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasRightAbsence">Ajout d'une absence</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                                    aria-label="Close"></button>
                        </div>

                        <div class="offcanvas-body">
                            <form action="#" method="POST">
                                <label class="mt-3">Choisir un type d'absence</label>
                                <div class="typeLate mt-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckMaladie" name="type_absence[]" value="Maladie">
                                        <label class="form-check-label" for="flexCheckMaladie">Maladie</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckAccident" name="type_absence[]" value="Accident">
                                        <label class="form-check-label" for="flexCheckAccident">Accident</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckFamiliale" name="type_absence[]" value="Familiale">
                                        <label class="form-check-label" for="flexCheckFamiliale">Familiale</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckVacances" name="type_absence[]" value="Vacances">
                                        <label class="form-check-label" for="flexCheckVacances">Vacances</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckAutres" name="type_absence[]" value="Autres">
                                        <label class="form-check-label" for="flexCheckAutres">Autres</label>
                                    </div>
                                </div>
                                <div class="containerDatePicker">
                                    <h4 class="text-center mb-4">Délais d'Absence</h4>
                                    <label for="dateDebut" class="form-label">Date de début :</label>
                                    <div class="input-group mb-3">
                                        <input type="text" id="dateDebut" class="form-control flatpickr" placeholder="Sélectionne la date de début">
                                        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                    </div>
                                    <label for="dateFin" class="form-label">Date de fin :</label>
                                    <div class="input-group mb-3">
                                        <input type="text" id="dateFin" class="form-control flatpickr" placeholder="Sélectionne la date de fin">
                                        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                    </div>
                                    <button class="btn btn-primary w-100" id="validerAbsence" type="button">Valider Durée</button>
                                </div>
                                <div class="mt-4">
                                    <button class="btn btn-outline-warning mx-3 px-4" type="submit">Soumettre</button>
                                    <button class="btn btn-outline-warning mx-3 px-4" type="reset">Réinitialiser</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <h4 class="mt-5 mb-4">Retards à valider</h4>
                <div class="JustificatifsRetard">
                    <div class="table-responsive">
                        <table class="table align-middle table-striped table-hover table-custom bg-secondary">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Heure d'arrivée</th>
                                    <th scope="col">Motif</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>12/03/2025</td>
                                    <td>09:15</td>
                                    <td>Transport</td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>15/03/2025</td>
                                    <td>09:30</td>
                                    <td>Maladie</td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>20/03/2025</td>
                                    <td>10:00</td>
                                    <td>Retard accidentel</td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">4</th>
                                    <td>10/04/2025</td>
                                    <td>09:45</td>
                                    <td>Problème de transport</td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">Valider</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">5</th>
                                    <td>25/05/2025</td>
                                    <td>09:05</td>
                                    <td>Famille</td>
                                    <td>
                                        <button type="button" class="btn btn-warning btn-sm">en cours</button>
                                        <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="btnNewLateAbs mb-5">
                    <button class="btnNewLate btn btn-outline-warning" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasRightRetard" aria-controls="offcanvasRight">
                        Ajout d'un retard
                    </button>

                    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRightRetard"
                         aria-labelledby="offcanvasRightLabelRetard">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasRightLabelRetard">Ajout d'un retard</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                                    aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <form action="#" method="POST">
                                <label class="mt-3">Choisir un type de retard</label>
                                <div class="typeLate mt-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckReveil" name="type_retard[]" value="Réveil">
                                        <label class="form-check-label" for="flexCheckReveil">Réveil</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckImprevu" name="type_retard[]" value="Imprévu">
                                        <label class="form-check-label" for="flexCheckImprevu">Imprévu</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckObligationFamiliale" name="type_retard[]" value="Familiale">
                                        <label class="form-check-label" for="flexCheckObligationFamiliale">Familiale</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckTransport" name="type_retard[]" value="Transport">
                                        <label class="form-check-label" for="flexCheckTransport">Transport</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexCheckAutre" name="type_retard[]" value="Autre">
                                        <label class="form-check-label" for="flexCheckAutre">Autre</label>
                                    </div>
                                </div>
                                <label class="form-label mt-3" for="DelayLate">Durée du retard:</label>
                                <input class="form-control w-50" type="text" id="DelayLate" name="duree_retard"
                                       placeholder="Ex: 15 min" required>
                                <div class="mt-4">
                                    <button class="btn btn-outline-warning mx-3 px-4" type="submit">Soumettre</button>
                                    <button class="btn btn-outline-warning mx-3 px-4" type="reset">Réinitialiser</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
        <!-- =======================FOOTER================ -->
        @Html.Partial("~/Views/Shared/Components/_Footer.cshtml")
        </div>
    </div>

    