@{
    ViewData["Title"] = "CandidatureStudent";
}

<h1 class="mx-4 mt-5">Dossier: Hatake Looka</h1>

<div class="cardStudent">
    <div class="row g-4 mb-5">
        <div class="col-md-4 col-sm-12">
            <div class="p-3 mb-3 border rounded-3 bg-light studentInfos">
                <img src="~/images/looka.png" alt="Looka Hatake" class="student-image">
                <h4>Looka Hatake</h4>
                <span>Classe : CDA</span>
                <span>Adresse: 15 imp de.....</span>
                <span>Code postale: 57890</span>
                <span>Telephone: 06 12 34 56 78</span>
                <span>Mail: looka.hatake...</span>
                <span>Date de naissance : 01/01/2000</span>
            </div>
            <div class="p-3 mb-3 border rounded-3 bg-light studentInfos">
                <div class="student-info-enCours">
                    <h4>En cours</h4>
                    <img width="80" height="80" src="https://img.icons8.com/dotty/80/rotate.png" alt="rotate" />
                </div>
            </div>
            <div class="p-4 mb-4 border rounded-3 bg-light">
                <h4 class="mb-3 text-center">Dépôt de document</h4>
                <form method="post" enctype="multipart/form-data" asp-controller="VotreControleur" asp-action="VotreAction">
                    <div class="input-group">
                        <input type="file" class="form-control" id="documentUpload" name="document">
                        <button class="btn btn-primary" type="submit">Ajouter</button>
                    </div>
                </form>
            </div>

            <div class="p-3 mb-3 border rounded-3 bg-light studentInfos">
                <div class="student-info-supp">
                    <h4>Supprimer Dossier</h4>
                    <button type="button" class="btn btn-outline-light">Supprimer</button>
                </div>
            </div>
        </div>

        <div class="col-md-8 col-sm-12">
            <div class="row mb-4">
                <div class="col-12 ">
                    <div class="row g-5">
                        <div class="col-md-5 col-sm-12 p-3 mx-4 border rounded-3 bg-light">
                            <h4 class="mb-4">Progression du dossier</h4>
                            <div class="progress" style="height: 50px;">
                                <div class="progress-bar" role="progressbar" style="width: 50%"
                                     aria-valuemin="0" aria-valuemax="100" aria-valuenow="50">
                                    50%
                                </div>
                            </div>
                            <p>Validation eleve</p>
                            <div class="progress mt-5 " style="height: 50px;">
                                <div class="progress-bar progress-bar-striped bg-warning" role="progressbar"
                                     style="width: 25%" aria-valuemin="0" aria-valuemax="100"
                                     aria-valuenow="25">
                                    25%
                                </div>
                            </div>
                            <p>Validation mns</p>

                        </div>
                        <div class="col-md-6 mx-auto col-sm-12 p-3 rounded-3 boxNotif">
                            <h4>Notifications</h4>
                            <table class="table rounded-3 table-custom">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Pieces</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Ce qui vient la</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">2</th>
                                        <td>C.C</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">3</th>
                                        <td colspan="2">Dossier</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <div class="p-3 g-3 border rounded-3 bg-light">
                <h4>Pièce à fournir</h4>
                <div class="table-responsive">
                    <table class="table align-middle table-striped table-hover table-custom bg-secondary">
                        <thead>
                            <tr>
                                <th scope="col">Pièce</th>
                                <th scope="col" class="d-none d-md-table-cell">Date</th>
                                <th scope="col">Vérification</th>
                                <th scope="col">Validation</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Lettre de motivation</td>
                                <td class="d-none d-md-table-cell">14.05.2025</td>
                                <td>
                                    <button type="button" class="btn btn-warning btn-sm">
                                        <i class="bi bi-file-earmark-text"></i> Vérifier
                                    </button>
                                </td>
                                <td class="d-flex flex-wrap gap-2">
                                    <button type="button" class="btn btn-success btn-sm ">Valider</button>
                                    <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                </td>
                            </tr>

                            <tr>
                                <td>Rib</td>
                                <td class="d-none d-md-table-cell">21.08.2024</td>
                                <td>
                                    <button type="button" class="btn btn-warning btn-sm">
                                        <i class="bi bi-file-earmark-text"></i> Vérifier
                                    </button>
                                </td>
                                <td class="d-flex flex-wrap gap-2">
                                    <button type="button" class="btn btn-success btn-sm">Valider</button>
                                    <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                </td>
                            </tr>

                            <tr>
                                <td>Entretien</td>
                                <td class="d-none d-md-table-cell">18.10.2024</td>
                                <td>
                                    <button type="button" class="btn btn-warning btn-sm ">
                                        <i class="bi bi-file-earmark-text"></i> Vérifier
                                    </button>
                                </td>
                                <td class="d-flex flex-wrap gap-2">
                                    <button type="button" class="btn btn-success btn-sm">Valider</button>
                                    <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                </td>
                            </tr>

                            <tr>
                                <td>Photo</td>
                                <td class="d-none d-md-table-cell">29.09.2025</td>
                                <td>
                                    <button type="button" class="btn btn-warning btn-sm">
                                        <i class="bi bi-file-earmark-text"></i> Vérifier
                                    </button>
                                </td>
                                <td class="d-flex flex-wrap gap-2">
                                    <button type="button" class="btn btn-success btn-sm ">Valider</button>
                                    <button type="button" class="btn btn-danger btn-sm">Refuser</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>